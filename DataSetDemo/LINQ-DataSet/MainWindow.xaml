        <Button Content="basic &gt; 1000" HorizontalAlignment="Left" Margin="544,109,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Enter DeptNo" HorizontalAlignment="Left" Margin="510,168,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click_1"/>
        <Button Content="Selete 2 fileds" HorizontalAlignment="Left" Margin="510,212,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click_2"/>
        <TextBox x:Name="txtDeptNo" HorizontalAlignment="Left" Height="23" Margin="637,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
