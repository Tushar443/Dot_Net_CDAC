        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LINQ_DataSet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="lstGrid" HorizontalAlignment="Left" Height="341" Margin="10,36,0,0" VerticalAlignment="Top" Width="437" SelectionChanged="DataGrid_SelectionChanged"/>
